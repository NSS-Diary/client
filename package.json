{
  "name": "nss-diary",
  "productName": "nss-diary",
  "version": "0.1.0",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "J Ananthakrishnan",
  "private": true,
  "license": "ISC",
  "description": "Electron App",
  "scripts": {
    "dev": "concurrently -k \"npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package": "react-scripts build && electron-forge package",
    "make": "react-scripts build && electron-forge make",
    "build-installer": "react-scripts build && electron-builder"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.13",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "axios": "^0.21.0",
    "d3-ease": "^2.0.0",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.1",
    "react-awesome-button": "^6.5.1",
    "react-circular-progressbar": "^2.0.3",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-move": "^6.4.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-web-vector-icons": "^1.0.2",
    "redux": "^4.0.5",
    "redux-devtools": "^3.7.0",
    "redux-thunk": "^2.3.0",
    "web-vitals": "^0.2.4"
  },
  "build": {
    "appId": "nss-diary",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/icons/win/icon.ico"
    },
    "nsis": {
      "installerIcon": "src/icons/win/icon.ico",
      "uninstallerIcon": "src/icons/win/icon.ico",
      "uninstallDisplayName": "nss-diary",
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "concurrently": "^5.3.0",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "wait-on": "^5.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icons/win/icon.ico",
        "name": "nss-diary",
        "executableName": "nss-diary"
      },
      "electronPackagerConfig": {
        "executableName": "nss-diary",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "nss-diary"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
